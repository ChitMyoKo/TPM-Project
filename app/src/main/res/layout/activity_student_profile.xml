<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.StudentProfileActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@drawable/gradient_color">
            <ImageButton
                    android:layout_margin="8dp"
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"/>
            <androidx.cardview.widget.CardView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/cvProfile"
                    android:layout_below="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp">
                <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/msp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_toEndOf="@+id/cvProfile"
                    android:layout_alignBottom="@+id/cvProfile"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_margin="8dp"
                        android:id="@+id/tvNameProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:text="World"/>
                <TextView
                        android:id="@+id/tvProfessionProfile"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:text="World"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/work"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvWork"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivWork"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivWork"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/office"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvOffice"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivOffice"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivOffice"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/address"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvPlace"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivPlace"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivPlace"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/birthday"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivBirthday"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivBirthday"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grade"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvGrade"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivGrade"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivGrade"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvPhone"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivPhone"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivPhone"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/email"
                    android:scaleType="centerCrop"
                    android:tint="@color/colorAccent"/>
            <TextView
                    android:id="@+id/tvEmail"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:text="Android Developer"
                    android:layout_toEndOf="@+id/ivEmail"
                    android:layout_centerInParent="true"/>
            <View
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@+id/ivEmail"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlack"
                    android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>