<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ActivitiesDetailsActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:id="@+id/ivActivitiesDetailsBg"
                        android:src="@drawable/chairman"
                        android:scaleType="centerCrop"/>
                <ImageButton
                        android:layout_margin="8dp"
                        android:id="@+id/btnBackActivitiesDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back"/>
                <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/tvActivitiesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:text="hello world"
                        android:textColor="@color/colorWhite"/>
            </RelativeLayout>
            <TextView
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:id="@+id/tvActivitiesDetailBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hello"
            />
            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <RelativeLayout
                        android:id="@+id/btnLoveReact"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/colorAccent"
                        android:layout_weight="1">
                    <ImageView
                            android:tint="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/favorite"/>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/btnComment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/colorAccent"
                        android:layout_weight="1">
                    <ImageView
                            android:tint="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/comment"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>